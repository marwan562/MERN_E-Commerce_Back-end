{
  "compilerOptions": {
    "target": "ES6",                       // Use ES6 as the target version for emitted JavaScript
    "module": "ESNext",                    // Use ES module syntax for module imports/exports
    "moduleResolution": "node",            // Use Node.js module resolution strategy
    "rootDir": "./src",                    // Root directory of the source files
    "outDir": "./dist",                    // Output directory for the built files
    "esModuleInterop": true,               // Allows default importing of CommonJS modules
    "forceConsistentCasingInFileNames": true,  // Ensure consistency in file name casing
    "strict": true,                        // Enable all strict type-checking options
    "skipLibCheck": true                   // Skip type checking for library files
  },
  "include": ["src/**/*"],                 // Include all TypeScript files in the src folder
  "exclude": ["node_modules"]              // Exclude node_modules from TypeScript compilation
}
