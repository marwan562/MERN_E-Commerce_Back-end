{
  "compilerOptions": {
    "target": "ES6", // or "ESNext"
    "module": "ESNext", // Ensure modules are in ESNext format
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
